@model IEnumerable<HoiDongYVN.Models.Tag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách danh mục</h1>
<div>
    <a class="btn btn-sm"  role="dialog" id="openModalCreateButton" data-toggle="modal" data-target="#CreateTagModal" aria-haspopup="true" aria-expanded="false" style="color: #fff;background-color: #6A1408;border-color: #6A1408;">Tạo danh mục</a>

    <table class="table">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.STagname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var dem = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @dem
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STagname)
                    </td>
                    @if (item.IStatus == 1)
                    {
                        <td>
                            Hoạt động
                        </td>
                    }
                    else
                    {
                        <td>
                            Khóa
                        </td>
                    }
                    @* <td>
                @Html.DisplayFor(modelItem => item.IStatus)
                </td>*@
                    <td>
                        <a  role="dialog" id="openModalEditButton" data-toggle="modal" data-target="#EditTagModal" aria-haspopup="true" aria-expanded="false"><i class="fa fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.PkITagId"><i class="bi bi-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.PkITagId"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
                dem++;
            }
        </tbody>
    </table>
    <div class="dropdown show">
        @* Hiện modal create Tag *@
        <div class="modal fade" id="CreateTagModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="color: #fff;background-color: #6A1408;">
                        <h5 class="modal-title" id="myModalLabel" >Tạo danh mục</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:#fff">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Tên danh mục</label>
                                <input name="Tagname" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="dropdown show">
        @* Hiện modal edit Tag *@
        <div class="modal fade" id="EditTagModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="color: #fff;background-color: #6A1408;">
                        <h5 class="modal-title" id="myModalLabel">Sửa danh mục</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:#fff">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Tên danh mục</label>
                                <input name="Tagname" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Edit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Get the modal element
        var modal = document.getElementById("CreateTagModal");

        // Get the button that opens the modal
        var openModalButton = document.getElementById("openModalCreateButton");

        // Open the modal when the button is clicked
        openModalButton.onclick = function () {
            modal.style.display = "block";
        }

        // Close the modal when the user clicks outside of it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

</div>
