    var idUpdate = 0;

    function createTag() {
        var name = document.getElementById("Tagname");
        var error = document.getElementById("error");
        if (name.value == "") {
            error.innerHTML = "Vui lòng nhập tên nhóm danh mục";
            name.focus();
            return;
        }

        var Tag = {
            "STagname": name.value,
            "IStatus":1
        }
        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var res = JSON.parse(this.responseText);
                if (res.message != null) {
                    error.innerHTML = res.message;
                    return;
                }

                addRowToTable(res.pkITagId, res.sTagname);
                document.getElementById("btnCloseModal1").click();

            }
        };
        request.open("POST", "/Tags/CreateTag", true);
        request.setRequestHeader("Content-type", "application/json");
        request.send(JSON.stringify(Tag));
    }






    function updateTag() {
        var name = document.getElementById("new_tagName");
