            //"IStatus": 1
        }
        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                console.log(this.responseText);
                var res = JSON.parse(this.responseText);
                if (res.message != null) {
                    error.innerHTML = res.message;
                    return;
                }
                document.getElementById("TagName_" + res.pkITagId).innerHTML = res.sTagname;
                document.getElementById("btnCloseModal2").click();
            }
        };
        request.open("POST", "/Tags/UpdateTag/" + idUpdate, true);
        request.setRequestHeader("Content-type", "application/json");
        request.send(JSON.stringify(tag));
    }




    function deleteTag() {
        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("btnCloseModalDelete").click();
                document.getElementById('tblTag').deleteRow(document.getElementById("row-" + idUpdate).rowIndex);
            }
        };
        request.open("POST", "/Tags/DeleteTag/" + idUpdate, true);
        request.send();
    }




