@model HoiDongYVN.Models.ViewModel.PostModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PkIPostId" />
            <div class="form-group">
                <label asp-for="ITagid" class="control-label"></label>
                <select asp-for="ITagid" class="form-control">
                    @foreach (var item in ViewBag.Tag)
                    {
                        <option value="@item.PkITagId">@item.STagname</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="STitle" class="control-label"></label>
                <input asp-for="STitle" class="form-control" />
                <span asp-validation-for="STitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SDescription" class="control-label"></label>
                <input asp-for="SDescription" class="form-control" />
                <span asp-validation-for="SDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SContent" class="control-label"></label>
                <textarea asp-for="SContent" id="contentPost" class="form-control"></textarea>
                <span asp-validation-for="SContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SSource" class="control-label"></label>
                <input asp-for="SSource" class="form-control"  />
                <span asp-validation-for="SSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SImage" class="control-label"></label>
                <img src="~/image/image_post/@Model.SImage" alt="Image" width="100" height="100" />
                <input name="imageFile" type="file" class="form-control" />
                <span asp-validation-for="SImage" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    CKEDITOR.replace("contentPost");
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
